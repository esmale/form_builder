<div class="container mx-auto mt-4">
  <h4 class="text-xl"><%= @form.name %></h4>

  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @user_forms.each do |user_form| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= user_form.user.name.full %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= user_form.created_at.to_date %></td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to "Show", admin_form_response_path(@form, user_form), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
