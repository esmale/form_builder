<div><%= @question.question_type.titleize %> Question</div>

<%= form_with model: @question do |f| %>
  <%= f.hidden_field :form_id %>
  <%= f.hidden_field :question_type %>

  <div class="field">
    <%= f.label :label, "Question Text", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :label, autofocus: true, required: true, class: "pl-2 pt-2 pb-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md" %>
  </div>

  <% if @question.has_options? %>
    <div class="field">
      UI to add options here...
    </div>
  <% end %>

  <div class="mt-3">
    <%= f.submit "Add Question", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
