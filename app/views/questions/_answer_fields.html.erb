<div class="nested-form-wrapper grid grid-cols-4 gap-3" data-new-record="<%= f.object.new_record? %>">
  <div class="col-span-3">
    <%= f.text_field :label, class: "pl-2 pt-2 pb-2 mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-gray-300 rounded-md" %>
  </div>
  <div class="col-span-1">
    <button type="button" data-action="nested-form#remove" tabindex="-1"
            class="p-2 mt-1 focus:ring-red-500 focus:border-red-500 block w-full shadow-sm sm:text-sm border border-red-300 rounded-md text-white bg-red-600 hover:bg-red-700">
      &times;
    </button>
    <%= f.hidden_field :_destroy %>
  </div>
</div>
